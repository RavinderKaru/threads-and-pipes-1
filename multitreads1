#include<stdio.h>
#include<stdlib.h>
#include<fcntl.h>
#include<sys/types.h>
#include<unistd.h>
#include<pthread.h>

int average;
int minimum;
int maximum;

void *avgfct(int ar[]);
void *minfct(int ar[]);
void *maxfct(int ar[]);

int a[10];
int n;

int main()
{
printf("enter length of an array\n");
scanf("%d",&n);
int a[n];
printf("enter elements of an array\n");
for(int i=0;i<n;i++)
{
printf("enter element %d -",i+1);
scanf("%d",&a[i]);
}
pthread_t t1,t2,t3;
pthread_create(&t1,NULL,(void *)avgfct,&a);
pthread_create(&t2,NULL, (void *)minfct,&a);
pthread_create(&t3,NULL, (void *)maxfct,&a);
pthread_join(t1,NULL);
pthread_join(t2,NULL);
pthread_join(t3,NULL);
printf("The average  value is %d\n",average);
printf("The minimum value is %d\n",minimum);
printf("The maximum value is %d\n",maximum);
return 0;
}
void *avgfct(int ar[])
{	int sum=0;
	for(int i=0;i<n;i++)
	{	sum=sum+ar[i];
	}
		average=sum/n;
	}
void *minfct(int ar[])
{
	 minimum=ar[0];
		for(int i=0;i<n;i++)
			{	if(minimum<ar[i])
					{
						minimum=ar[i];
					}
			}
}
void *maxfct(int ar[])
{	
	 maximum=ar[0];
		for(int i=0;i<n;i++)
			{	if(maximum>ar[i])
					{
						maximum=ar[i];
					}
			}
}


